@model IEnumerable<Shelter.Models.Entities.User>

<div class="card" id="UserTableComponent">
    <div class="card-header">
        User Table
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Butonlar</th>
                    <th scope="col">Email</th>
                    <th scope="col">Role</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <th scope="row">
                            <button type="button" class="btn btn-danger btn-sm">Admin Yetkisi Ver</button>
                        </th>
                        <td>@user.Email</td>
                        <td>Otto</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
